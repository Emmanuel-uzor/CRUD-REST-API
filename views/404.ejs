        table{
            width: 100%;
            text-align: center;
        }
        th, td{
            /* height: 35px; */
            padding: 10px;
        }
        #head h1{
            margin-bottom: 0;
        }
        #but button{
            background-color: #D8973C;
            height: 25px;
            border-radius: 5px;
            font-size: 12px;
            font-weight: bold;
            width: 50px;
        }
        #but{
            display: flex;
            place-content: center;
            flex-wrap: wrap;
        }
        th, td, table{
            border: 1px solid wheat;
