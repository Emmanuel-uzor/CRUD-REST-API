<body>
    
    <nav>
        <h1>User Management Database</h1>
    </nav>
    <div id="search">
        <input type="search" id="searching">
        <button id="butt">SEARCH</button>
    </div>
    <div id="head">
        <h1 style="margin-top: 0;">404. NOT FOUND</h1>
    </div>


        <script>
        let button = document.getElementById("butt")
        button.addEventListener("click", () => {
            let val = document.getElementById("searching").value

            if (val.length === 0) {
                alert("Enter something")
            } else {
                window.location.href = `/api/read/${val}`
            }
            
             
        })

        
    </script>
