        body{
            background-color: #D8C99B;
            margin: 0;
            font-family: sans-serif;
            overflow: hidden;
        }
        nav{
            background-color: #273E47;
            color: white;
        }
        nav h1{
            text-align: center;
            margin-top: 0;
            padding: 5px 0px;
        }
        form{
            display: flex;
            flex-direction: column;
            gap: 18px;
            margin-top: 20px;
        }
        #head{
            border: 2px solid black;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            justify-content: space-between;
